<div class="card m-4" style="width: 18rem;">
    <a href="product/@Product.Id"><img src="@Product.ImgURL" class="card-img-top" alt="..."></a>
    <div class="card-body">
        <a href="product/@Product.Id"><h5 class="card-title">@Product.Name</h5></a>
        <div class="d-flex mb-3">
            @if (Product.DiscountPercent is not null)
            {
                <p class="card-text text-decoration-line-through">@Product.Price USD</p>
                <p class="card-text text-danger mx-3">@Product.DiscountPrice.GetValueOrDefault().ToString("F") USD</p>
            }
            else
            {
                <p class="card-text">@Product.Price USD</p>
            }
        </div>
        <AddToCartButton Product="Product"></AddToCartButton>

    </div>
</div>
@code {
    [Parameter]
    public Product Product { get; set; } = new();
}
